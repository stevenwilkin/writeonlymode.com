!!! 5
%html{:lang => "en"}

  %head
    %meta{:charset => "utf-8"}
    %title Write-Only Mode
    %meta{:name => 'description', :content => ''}
    = csrf_meta_tag
    = stylesheet_link_tag 'application'

  %body

    %nav.topbar
      .fill
        .container
          %h3
            %a{:href => '/'} Write-Only Mode
          %ul.nav.secondary-nav
            %li
              - if @current_user
                = "@#{@current_user.name} |"
                = link_to 'Logout', logout_path
              - else
                = link_to 'Login with Twitter', '/auth/twitter'

    %article.container
      = yield

    %footer.container
      &copy; 2011
      %a{:href => 'http://stevenwilkin.com'} Steven Wilkin
      &bull;
      %a{:href => 'http://twitter.com/stevebiscuit'} Twitter
